<div class="columns">
  <div class="column">
      <h1 class="subtitle">
        Nodes
      </h1>

      {{#if errors}}
        <article class="message is-danger">
          <div class="message-body">
            <ul>
              {{#each errors}}
                <li>{{this.message}}</li>
              {{/each}}
            </ul>
          </div>
        </article>
      {{/if}}

      {{#if nodes.length}}
        <div class="box">
          <div class="table-container">
            <table class="table is-hoverable is-fullwidth">
              <thead>
              <tr>
                <td>Name</td>
                <td>IP Address</td>
                <td>Active</td>
              </tr>
              </thead>
              {{#each nodes}}
                <tr>
                  <td>
                    {{name}}
                  </td>
                  <td>
                    {{ ip_address }}
                  </td>
                  <td>
                    {{#if active}}
                    Yes
                    {{else}}
                    No
                    {{/if}}
                  </td>
                </tr>
              {{/each}}
            </table>
          </div>
        </div>
      {{/if}}

  </div>
</div>

<h1 class="subtitle">
  Cluster Load
</h1>

<div class='box'>
  <div class="table-container">
    <nav class="level">
      <div class="level-item has-text-centered">
        <div>
          <p class="heading">Nodes</p>
          <p class="title">{{nodes.length}}</p>
        </div>
      </div>
      <div class="level-item has-text-centered">
        <div>
          <p class="heading">Application Instances</p>
          <p class="title">{{ instances }}</p>
        </div>
      </div>
      <div class="level-item has-text-centered">
        <div>
          <p class="heading">Instances per Node</p>
          <p class="title">{{ instancesPerNode }}</p>
        </div>
      </div>
    </nav>
  </div>

  <hr/>

  <div class='message'>
    <div class="message-body">
      <p>Manage nodes using <code>mothership cluster-scale</code> on the command line. We recommend a maximum load of 5 instances per node. </p>
    </div>
  </div>
</div >
