<div class="columns">
  <div class="column">
      <h1 class="subtitle">
        {{apps.length}} app(s)
        <a href="/apps/new" class="button is-primary is-pulled-right">Create App</a>
      </h1>

      {{#if apps.length}}
        <div class="box">
          <div class="table-container">
            <table class="table is-hoverable is-fullwidth">
              <thead>
              <tr>
                <td>Name</td>
                <td>URL</td>
                <td>Instances</td>
              </tr>
              </thead>
              {{#each apps}}
                <tr>
                  <td>
                    <a href="/apps/{{ id }}">
                      <span class="app-icon">{{ firstChar title }}</span>
                      {{title}}
                    </a>
                  </td>
                  <td>
                    <a href="http://{{url}}" target="_blank">
                      http://{{url}}
                    </a>
                  </td>
                  <td>{{replicas}}</td>
                </tr>
              {{/each}}
            </table>
          </div>
        </div>
      {{/if}}

  </div>
</div>
